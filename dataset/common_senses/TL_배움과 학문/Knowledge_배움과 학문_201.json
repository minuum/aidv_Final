        {
            "reference_date": null,
            "reference_text": null,
            "role": "전문가",
            "search_URL": null,
            "search_query": null,
            "terminate": false,
            "text": "맞아, 그래서 정부나 기관에서도 여러 가지 교육 정책을 내놓았어.",
            "turn_id": "BK22012452-9",
